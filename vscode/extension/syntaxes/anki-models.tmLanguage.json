{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Anki Models",
  "scopeName": "source.anki-models",
  "patterns": [
    {
      "name": "meta.tag.anki-models",
      "match": "^(model)[ \\t]+(.*?)[ \\t]*$",
      "captures": {
        "1": { "name": "keyword.control.anki-models" },
        "2": { "name": "string.unquoted.value.anki-models" }
      }
    },
    {
      "name": "meta.tag.anki-models",
      "match": "^(id)[ \\t]+(.*?)[ \\t]*$",
      "captures": {
        "1": { "name": "keyword.control.anki-models" },
        "2": { "name": "string.unquoted.value.anki-models" }
      }
    },
    {
      "name": "meta.tag.anki-models",
      "match": "^(cloze)[ \\t]*$",
      "captures": {
        "1": { "name": "keyword.control.anki-models" }
      }
    },
    {
      "name": "meta.tag.anki-models",
      "match": "^(field)[ \\t]+(.*?)[ \\t]*$",
      "captures": {
        "1": { "name": "keyword.control.anki-models" },
        "2": { "name": "string.unquoted.value.anki-models" }
      }
    },
    {
      "name": "meta.tag.anki-models",
      "match": "^(card)[ \\t]+(.*?)[ \\t]*$",
      "captures": {
        "1": { "name": "keyword.control.anki-models" },
        "2": { "name": "string.unquoted.value.anki-models" }
      }
    },
    {
      "name": "meta.block.html",
      "begin": "^(front)[ \\t]*\\n",
      "beginCaptures": {
        "1": { "name": "keyword.control.anki-models" }
      },
      "end": "^(~~~)[ \\t]*\\n",
      "endCaptures": {
        "1": { "name": "keyword.control.anki-models" }
      },
      "patterns": [
        { "include": "text.html.basic" },
        {
          "match": "\\{\\{(?:(?!\\}\\}).)*\\}\\}",
          "name": "constant.language.anki-models"
        }
      ]
    },
    {
      "name": "meta.block.html",
      "begin": "^(back)[ \\t]*\\n",
      "beginCaptures": {
        "1": { "name": "keyword.control.anki-models" }
      },
      "end": "^(~~~)[ \\t]*\\n",
      "endCaptures": {
        "1": { "name": "keyword.control.anki-models" }
      },
      "patterns": [
        { "include": "text.html.basic" },
        {
          "match": "\\{\\{(?:(?!\\}\\}).)*\\}\\}",
          "name": "constant.language.anki-models"
        }
      ]
    },
    {
      "name": "meta.block.css",
      "begin": "^(styles)[ \\t]*\\n",
      "beginCaptures": {
        "1": { "name": "keyword.control.anki-models" }
      },
      "end": "^(~~~)[ \\t]*\\n",
      "endCaptures": {
        "1": { "name": "keyword.control.anki-models" }
      },
      "patterns": [{ "include": "source.css" }]
    }
  ],
  "repository": {}
}
