{
  "private": true,
  "name": "notatki",
  "version": "0.0.0",
  "description": "A collection of tools for creating and syncing Anki notes from simple text files.",
  "keywords": [
    "anki",
    "flashcards",
    "spaced-repetition"
  ],
  "homepage": "https://github.com/aradzie/notatki#readme",
  "bugs": {
    "url": "https://github.com/aradzie/notatki/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aradzie/notatki.git"
  },
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "scripts",
    "packages/notatki-parser",
    "packages/notatki-format",
    "packages/notatki-core",
    "packages/notatki-preview",
    "packages/notatki-sync",
    "packages/notatki-cli",
    "vscode/protocol",
    "vscode/webview",
    "vscode/extension",
    "examples"
  ],
  "dependencies": {
    "rich-assert": "^0.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "prettier": "^3.8.0",
    "stylelint": "^16.26.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-plugin-logical-css": "^1.2.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.53.0"
  },
  "scripts": {
    "compile": "npm run compile --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint '{**/*,*}.{js,ts,tsx}'",
    "lint-fix": "eslint '{**/*,*}.{js,ts,tsx}' --fix",
    "stylelint": "stylelint '**/*.css'",
    "stylelint-fix": "stylelint '**.css' --fix",
    "format": "prettier '{**/*,*}.{js,ts,tsx,css}' --write",
    "prepublish": "npm run compile && npm run test && npm run lint && npm run stylelint",
    "publish": "lerna publish --no-private"
  }
}
